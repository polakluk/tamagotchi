            			<TextBlock x:Name="tb_lbl_LastActivity" HorizontalAlignment="Left" Margin="8,0,0,47" TextWrapping="Wrap" Text="Last activity" Style="{StaticResource PhoneTextSmallStyle}" Grid.Row="1" d:LayoutOverrides="Height"/>
